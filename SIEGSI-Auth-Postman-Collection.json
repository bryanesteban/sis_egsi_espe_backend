			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Guardar el token autom√°ticamente",
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"jwt_token\", jsonData.token);",
							"    pm.environment.set(\"username\", jsonData.username);",
							"    pm.environment.set(\"rolename\", jsonData.rolename);",
							"    console.log(\"‚úÖ Token guardado exitosamente\");",
							"    console.log(\"Usuario: \" + jsonData.username);",
							"    console.log(\"Rol: \" + jsonData.rolename);",
							"",
							"    // Tests de seguridad",
							"    pm.test(\"Response tiene X-XSS-Protection header\", function () {",
							"        pm.response.to.have.header(\"X-XSS-Protection\");",
							"    });",
							"",
							"    pm.test(\"Response tiene X-Frame-Options header\", function () {",
							"        pm.response.to.have.header(\"X-Frame-Options\");",
							"    });",
							"",
							"    pm.test(\"Response tiene Content-Security-Policy header\", function () {",
							"        pm.response.to.have.header(\"Content-Security-Policy\");",
							"    });",
							"",
							"    pm.test(\"Status code es 200\", function () {",
							"        pm.response.to.have.status(200);",
							"    });",
							"",
							"    pm.test(\"Response contiene token JWT\", function () {",
							"        pm.expect(jsonData.token).to.be.a('string');",
							"        pm.expect(jsonData.token.length).to.be.greaterThan(0);",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
